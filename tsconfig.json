{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "jsx": "preserve",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": [
            "ESNext",
            "DOM"
        ],
        "skipLibCheck": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "docs/*"
            ]
        }
    },
    "include": [
        "docs/**/*.ts",
        "docs/**/*.d.ts",
        "docs/**/*.tsx",
        "docs/**/*.vue"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}